<%= render "shared/second-header"%>
<div class='transaction-contents'>
  <div class='transaction-main'>
    <%= form_with  url: cards_path, id: 'charge-form', class: 'card-form',local: true do |f| %>
      <div class='credit-card-form'>
        <h1 class='info-input-haedline'>
          クレジットカード情報入力
        </h1>
        <div class="form-group">
          <div class='form-text-wrap'>
            <label class="form-text">カード情報</label>
            <span class="indispensable">必須</span>
          </div>
          <%= f.text_field :number, class:"number", id:"number", placeholder:"カード番号(半角英数字)", maxlength:"16" %>
          <div class='available-card'>
            <%= image_tag 'card-visa.gif', class: 'card-logo'%>
            <%= image_tag 'card-mastercard.gif', class: 'card-logo'%>
            <%= image_tag 'card-jcb.gif', class: 'card-logo'%>
            <%= image_tag 'card-amex.gif', class: 'card-logo'%>
          </div>
        </div>
        <div class="form-group">
          <div class='form-text-wrap'>
            <label class="form-text">有効期限</label>
            <span class="indispensable">必須</span>
          </div>
          <div class='input-expiration-date-wrap'>
            <%= f.select :exp_month, 1..12, {include_blank: "---"}, class:"exp_month", id:"exp_month", placeholder:"例)3" %>
            <p>月</p>
            <%= f.select :exp_year, 20..25, {include_blank: "---"}, class:"exp_year", id:"exp_year", placeholder:"例)23" %>
            <p>年</p>
          </div>
        </div>
        <div class="form-group">
          <div class='form-text-wrap'>
            <label class="form-text">セキュリティコード</label>
            <span class="indispensable">必須</span>
          </div>
          <%= f.text_field :cvc, class:"cvc", id:"cvc", placeholder:"カード背面4桁もしくは3桁の番号", maxlength:"4" %>
        </div>
      </div>
      <%= f.submit "登録する" , class:"buy-red-btn" %>
    <% end %>
  </div>
</div>
<%= render "shared/second-footer"%>
